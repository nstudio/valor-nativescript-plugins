{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "plugins": [
      {
        "transform": "@nativescript/webpack/dist/transformers/NativeClass",
        "type": "raw"
      }
    ],
    "paths": {
      "@demo/shared": ["tools/demo/index.ts"],
      "@valor/*": ["packages/*"],
      "@valor/nativescript-barcodescanner": ["packages/nativescript-barcodescanner/index.d.ts"],
      "@valor/nativescript-feedback": ["packages/nativescript-feedback/index.d.ts"],
      "@valor/nativescript-in-app-review": ["packages/nativescript-in-app-review/index.d.ts"],
      "@valor/nativescript-ngrx-devtools": ["packages/nativescript-ngrx-devtools/src/index.ts"],
      "@valor/nativescript-view-shot": ["packages/nativescript-view-shot/index.d.ts"],
      "@valor/nativescript-view-shot/angular": ["packages/nativescript-view-shot/angular/index.ts"],
      "@valor/nativescript-websockets": ["packages/nativescript-websockets/index.d.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
